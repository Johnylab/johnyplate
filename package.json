{
  "name": "johnyplate",
  "version": "1.0.0",
  "description": "My preety awesome Jekyll-Babel-Boilerplate ;)",
  "scripts": {
    "bundler": "bundle update && gem uninstall eventmachine --force && gem install eventmachine --platform ruby",
    "parcel": "parcel watch _scripts/main.js --out-dir js --public-url ./",
    "parcel:build": "parcel build _scripts/main.js --out-dir js --no-source-maps",
    "serve": "bundle exec jekyll s w --livereload",
    "start": "run-p parcel serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Johnylab/johnyplate.git"
  },
  "keywords": [
    "jekyll",
    "sass",
    "babel",
    "parcel",
    "boilerplate"
  ],
  "author": "Johnylab",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Johnylab/johnyplate/issues"
  },
  "homepage": "http://johnylab.net/johnyplate",
  "devDependencies": {
    "eslint": "^6.4.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3"
  },
  "browserslist": [
    "last 1 version",
    "not dead",
    "> 0.2%"
  ]
}
